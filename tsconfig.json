{
	"compilerOptions": {
		"target": "es2018",
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"esModuleInterop": true,
		"pretty": true,
		"newLine": "lf",
		"stripInternal": true,
		"strict": true,
		"removeComments": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": [
		"source"
	],
	"exclude": [
		"node_modules"
	]
}
